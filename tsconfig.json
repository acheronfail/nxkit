{
  "include": ["forge.env.d.ts", "src/**/*.ts", "src/**/*.svelte"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
